<h1>Editing Book</h1>
<%= form_with(model:@book, url:"/books/#{@book.id}", local: true) do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <div>
  <%= f.label :title %>
  </div>
  <%= f.text_field :title %>
</div>
<div class="field">
  <div>
  <%= f.label :body %>
  </div>
  <%= f.text_area :body %>
</div>

  <div class="actions">
    <%= f.submit 'Update book' %>
  </div>
<% end %>

