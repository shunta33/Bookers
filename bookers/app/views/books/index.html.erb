<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="4"> </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_show_path(book.id) %></td>
    <td>Edit</td>
    <td>Destroy</td>
  </tr>
  <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book, url:'/book', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>