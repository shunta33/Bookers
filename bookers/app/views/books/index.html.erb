<h1>Books</h1>
<table>
    <tr>
        <th>title</th>
        <th>body</th>
        <th colspan="3"></th>
    </tr>
    <tr>
        <tb>リーダブルコード</tb>
        <tb>よりシンプルで実践的なテクニック</tb>
        <tb>
            <a href=/books/:id></a>
        </tb>
        <tb>Show</tb>
        <tb>Edit</tb>
        <tb>Destroy</tb>
    </tr>

</table>
<h2>New book</h2>
<%= form_with model: @book, url:'/book', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>