<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="4"> </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_show_path(book.id) %></td>
    <td><%= link_to "Edit", book_edit_path(book.id) %></td>
    <td><%= link_to 'Destroy', book_destroy_path(book.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
<h2>New book</h2>

<%= form_with model: @book, url:'/book', local:true do |f| %>

    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>